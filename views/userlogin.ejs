<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/bootstrap.min.css">
    <link rel="stylesheet" href="styles/style.css">
    <title>Document</title>
</head>
<body>
  <h2 class="docsignup">User Login</h2>
  <div class="formwrap">
    <form class="form1">
      
        Email :
        <input class="form-control" type="text" name="email" placeholder=""><br>
        Password :
        <input class="form-control" type="password" placeholder="" name="password"><br>
        <button class="form-control" class="" type="submit">Login</button>
    </form>
    </div>
    <script>
      const form = document.querySelector('.form1');

    
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
    

    
        // get values
        const email = form.email.value;
        const password = form.password.value;
    
        try {
          const res = await fetch('/userlogin', { 
            method: 'POST', 
            body: JSON.stringify({ email, password }),
            headers: {'Content-Type': 'application/json'}
          });
          const data = await res.json();
          console.log(data);
          if (data.errors) {
            console.log(data.errors);
          }
          if (data.user) {
            location.assign('/');
          }
    
        }
        catch (err) {
          console.log(err);
        }
      });
    </script>
        <script src="assets/jquery-1.12.1.min.js"></script>
        <script src="assets/bootstrap.min.js"></script>
</body>
</html>
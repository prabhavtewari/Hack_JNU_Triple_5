    <h1 class="herotxt">View Appointment</h1>
    <div class="formwrap1">
    <% appoint.forEach(function(ap,i){ %>
        <% if(ap.patid==userl._id){ %>
    <div class="viewcard">

       <div> <%=ap.date%> </div>
       <div> <%=ap.slot%> </div>
       <div> Dr. <%=ap.docname%></div>
        <%if(ap.status=="wait"){%>
           <div class="waitingapp"> Waiting Approval</div>
        <%}%>
        <%if(ap.status=="call"){%>
            <button class="btn_3" onclick="window.location.href='/call/<%=ap._id%>'">Join Call</button>
        <%}%>
        <%if(ap.status=="test"){%>
            <button class="btn_3" onclick="alert('<%=ap.tests%>')">View Tests</button>
            <button class="btn_3" onclick="window.location.href='/call/<%=ap._id%>'">Join Call</button>
        <%}%>
        <%if(ap.status=="med" || ap.status=="completed"){%>
            <button class="btn_3" onclick="alert('<%=ap.tests%>')">View Tests</button>
            <button class="btn_3" onclick="alert('<%=ap.meds%>')">View Medication</button>
        <%}%>
    </div>
    <%}})%>
